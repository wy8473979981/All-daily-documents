<!--pages/usercenter/activity/activity.wxml-->
<view id="activity" class="ys-block-fixed-header">
  <view class='ys-swiper-tab ys-fixed-header ys-tab-col-2'>
    <view class="swiper-tab-item {{currentTab == 1 ? 'active':''}}" >
    <text class="tab-nav "  data-current="1" bindtap="clickTab" >活动</text>
    </view>
    <view class="swiper-tab-item {{currentTab == 2 ? 'active':''}}" >
    <text class="tab-nav" data-current="2" bindtap="clickTab" >我的活动</text>
    </view>
  </view><!--ys-swiper-tab-->
    

  <view class="ys-block">
    <scroll-view class="ys-list-wrapper" scroll-y="true" bindscrolltoupper="upper" bindscrolltolower="lower" scroll-top="{{scrollTop}}">
      <view class="list-item" data-index="{{index}}" wx:for="{{items}}" wx:key="" 
      bindtap="showActivityDetail" data-id="{{item.id|'id'}}">
          <view class="ys-list-info col-left">
            <image src="{{item.image}}" mode="aspectFill" lazy-load='true' ></image>          
          </view>

          <view class="ys-list-info col-right col-flex-column">
                   <view class="title">
                      {{item.title}}
                    </view>
                      <view class="ys-badge ys-badge-sm ys-badge-green" wx:if="{{item.status=='goingon'}}">进行中</view>
                      <view class="ys-badge ys-badge-sm ys-badge-disabled" wx:if="{{item.status=='outdate'}}">已结束</view>
                    <view class="sub-title">
                      活动类型:{{item.activityType}}
                    </view>
                    <view class="sub-title">
                      活动时间:{{item.start}} ～ {{item.end}}
                    </view>
          </view>
    </view>
    </scroll-view><!--ys-list-wrapper-->
  </view><!--ys-block-->
</view>

