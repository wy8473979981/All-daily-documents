/* pages/usercenter/employee/employee.wxss */

page {
  background-color: #eee;
}

#employee-list .ys-list-wrapper{
  background-color:#fff;

  /* height:calc(100vh - 129rpx); */
  /* border-bottom:solid 30rpx #f5f5f5; */
  border-top:solid 30rpx #f5f5f5;

}
#employee-list .ys-fixed-footer .ys-btn{
  color:#ffa200;
}

.touch-item {
  position:relative;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  /*border-bottom:1px solid #ccc;*/
  width: 100%;
  overflow: hidden;
}

.touch-item:after{
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #eee;
  color: #D8D8D8;
  
}

.touch-item .content {
  display: flex;
  justify-content: space-between;

  width: 100%;
  padding: 30rpx;
  line-height: 44rpx;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}
.touch-item .content .ys-figure-avatar{
  width:81rpx;
  height:81rpx;
  margin:0;
  margin-right:20rpx;
  color: #fff;
  line-height: 81rpx;
  text-align: center;
  font-size: 40rpx;
}
.touch-item .content .ys-figure-info{
    flex:1;
}

.touch-item .content .ys-figure-info .name{
  color:#333;
  font-size:30rpx;
}
.touch-item .content .ys-figure-info .join-time{
  color:#999;
  font-size:24rpx;
}
.del {
  background-color: #ff6666;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
