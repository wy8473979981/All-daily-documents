/* pages/record.wxss */
#record{
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  font-size: 30rpx;
}
#record .ys-swiper-tab{
  position: fixed;
  z-index: 2;
  width: 100%;
  top: 0;
  display: flex;
  height: 80rpx;
  justify-content: space-between;
  line-height: 80rpx;
  background: #fff;
}
.ys-swiper-tab .swiper-tab-item{
  width: 160rpx;
  text-align: center;
  color: #888;
  font-size: 32rpx;
  margin: 0 auto;
}
.item-wrapper{
  width: 50%;
}
.ys-swiper-tab .active{
  color: #02d7c0;
  border-bottom: 4rpx solid #02d7c0;
}
.ys-swiper-tab .swiper-tab-line{
  height:30rpx;
  margin-top:25rpx;
  width: 2rpx;
  background: #ccc;
}

.ys-block-items{
  position: absolute;
  top: 100rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffff;
}
.bottom .user{
  color: #666;
}
.list{
  position: relative;
  height: 106rpx;
  border-bottom:1rpx solid #eee;
}
.left-side{
  position: absolute;
  left: 0;
  right: 150rpx;
  top: 13rpx;
  height: 80rpx;
  line-height: 40rpx;
  padding: 0rpx 30rpx;
}
.right-side{
  position: absolute;
  right: 0;
  top: 13rpx;
  height: 80rpx;
  width: 148rpx;
  border-left: 2rpx solid #f5f5f5;
  text-align: center;
  color: #ff0000;
  line-height: 40rpx;
  font-size: 24rpx;
}
.right-side image{
  display: block;
  height: 30rpx;
  width: 30rpx;
  margin: 5rpx auto;
}
.ys-block-items .list .top, .bottom{
  display: flex;
  justify-content: space-between;
  color: #999;
} 
.ys-block-items .list .top{
  font-size: 30rpx;
}
.ys-block-items .list .bottom{
  font-size: 24rpx;
}
.ys-block-items .list .name, .status{
  color: #262626;
}
.ys-block-items .noData{
  padding-top: 200rpx;
  text-align: center;
  line-height: 60rpx;
  color: #b2b2b2;
}
.noData image{
  display: block;
  height: 200rpx;
  width: 200rpx;
  margin: 0 auto;
}