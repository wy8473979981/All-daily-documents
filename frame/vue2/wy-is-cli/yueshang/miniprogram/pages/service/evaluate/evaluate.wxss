  #ys-evaluate{
  font-size: 30rpx;
  color: #333;
  background: #f5f5f5;
}
.ys-block{
  background: #fff;
}
.header{
  padding: 50rpx 0;
}
.ys-avatar{
  height: 150rpx;
  width: 150rpx;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
}
.ys-avatar image{
  height: 100%;
  width: 100%;
}
.name{
  text-align: center;
  margin-top: 20rpx;
  color: #333;
}
.divider{
  position: relative;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999;
}
.divider::before{
  position: absolute;
  right: 50%;
  margin-right: 60rpx;
  top: 25rpx;
  content: '';
  width: 260rpx;
  height: 2rpx;
  background: #f5f5f5;
}
.divider::after{
  position: absolute;
  left: 50%;
  margin-left: 60rpx;
  top: 25rpx;
  content: '';
  width: 260rpx;
  height: 2rpx;
  background: #f5f5f5;
}
.ys-evaluate-items{
  margin-top: 30rpx;
}
.ys-evaluate-items .ys-evaluate-item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  padding: 0 80rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #666;
}
.ys-evaluate-item image{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  margin: 5rpx 10rpx;
}

.remarks{
  background: #fff;
  color: #999;
}
.remarks label{
  display: block;
  padding-left: 25rpx;
  line-height: 80rpx;
  color: #999;
  background: #f5f5f5;
}
.remarks textarea{
  padding: 25rpx;
  height: 200rpx;
  padding-bottom: 30rpx;
}
.tips{
  padding: 60rpx 0;
}
.tips text{
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
}