    <view class='item-wrapper'>
      <label>商户</label>
      <text>{{globalData.detailInfo.brandName}}</text>
    </view>
    <view class='item-wrapper'>
      <label>铺位号</label>
      <text>{{globalData.detailInfo.storeNo}}</text>
    </view>
    <view class='item-wrapper'>
