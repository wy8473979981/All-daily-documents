.ys-block-items .item{
  height: calc(100vh - 110rpx);
  background: white;
}
.ys-block-items .item{
  height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 25rpx 25rpx 25rpx;
  overflow: hidden;
}
.item .right-side .header .title{
  font-size: 36rpx;
  color: #333;
}
.item .right-side .header{
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
}
.item .right-side .header .date{
  font-size: 24rpx;
  color: #999;
}
.item .right-side .body{
  /* position: relative; */
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item .right-side .body .content{
  /* display: block; */
  /* padding-right:30rpx; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  color: #666;
  /* background: greenyellow; */
  width: 650rpx;
}
