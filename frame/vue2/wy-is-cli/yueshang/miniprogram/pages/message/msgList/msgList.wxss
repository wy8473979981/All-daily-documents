page{
  font-size: 32rpx;
  color: #333;
  background: #f5f5f5;
}
.tabbar{
  z-index: 99;
  position: fixed;
  top: 0;
  width: 100%;
}
.btn-show{
  position: fixed;
  top: 85rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-show .arrow-down{
  width: 16rpx;
  height: 10rpx;
  margin-left: 30rpx;
}
.btn-show .arrow-down.reversed{
  transform: rotate(180deg);
}
.information-type-list{
  position: fixed;
  top: 145rpx;
  width: 100%;
}
.information-type-item{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  background: white;
}
.information-type-item.active{
  color: #ffa200;
}