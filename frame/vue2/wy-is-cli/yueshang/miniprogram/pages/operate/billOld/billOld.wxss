/* pages/operate/billOld/billOld.wxss */
page{
  background: #f5f5f5;
  font-size: 30rpx;
}
#bill .ys-swiper-tab{
  position: fixed;
  z-index: 2;
  width: 100%;
  display: flex;
  height: 80rpx;
  justify-content: space-around;
  line-height: 74rpx;
  background: #fff;
}
.container {
  padding-top: 80rpx;
  background: #fff;
}
.ys-swiper-tab .swiper-tab-item{
  position: relative;
  min-width: 120rpx;
  text-align: center;
  color: #666;
  font-size: 30rpx;
  margin: 0 auto;
  box-sizing: content-box;
}
.ys-swiper-tab .active{
  color: #02d7c0;
  border-bottom: 6rpx solid #02d7c0;
}
.ys-swiper-tab .active2{
  color: #ffa300;
  border-bottom: 6rpx solid #ffa300;
}
.papel{
  position: relative;
  background: #fff;
  padding: 0 20rpx;
  border-radius: 8rpx;
  border:20rpx solid #f5f5f5;
}
.papel .tips{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  color: #ffa300;
  font-size: 28rpx;
  background: #fcedcc;
}
.papel .bill {
  padding-top: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #5fbaf1;
}
.bill .money{
  font-size: 50rpx;
  margin-left: -15rpx;
}
.papel .side{
  position: relative;
  width: 96%;
  margin: 40rpx auto auto;
  padding: 30rpx 0;
  border-top: 2rpx solid #f5f5f5;
  overflow: hidden; 
  text-align: center;
}
.papel .side .label{
  font-size: 28rpx;
  color: #666;
}
.papel .side .money{
  font-size: 40rpx;
  color: #333;
  margin-left: -18rpx;
}
.papel .side .left{
  float: left;
  width: 50%;
  box-sizing: border-box;
  /* width: calc(50% - 2rpx); */
  border-left: 2rpx solid #fff;
}
.papel .side .right{
  float: left;
  width: 50%;
  box-sizing: border-box;
  /* width: calc(50% - 2rpx); */
  border-left: 2rpx solid #f5f5f5;
}
.ys-block{
  background: #fff;
}
.title{
  padding: 25rpx 30rpx;
}
.title text {
  position: relative;
  padding-left: 20rpx;
  font-weight:bold;
  color:#262626;
}
.title text::after{
  position: absolute;
  content: '';
  background: #02d7c0;
  top: 6rpx;
  left: 0;
  height: 30rpx;
  width: 8rpx;
}
.items{
  padding: 0 30rpx;
}
.items.has-checkbox{
  padding: 0 30rpx 99rpx 30rpx;
}

.item{
  position: relative;
  padding: 25px 0;
  border-top:2rpx solid #f5f5f5;
}
.items.has-checkbox .item{
  padding: 25rpx 0 25rpx 60rpx;
}
.item .item-checkbox{
  position: absolute;
  left: 0;
  top: 25rpx;
}
.item .item-info{
  display: flex;
  justify-content: space-between;
  height: 40rpx;
  line-height: 40rpx;
}
.item .item-info .type{
  flex-shrink: 0;
  width: 40%;
  
}
.item .item-info .type label{
  float: left;
}
.item .item-info .type text{
  width: 65%;
  display: block;
  float: left;
  /* width: 180rpx; */
  height: 40rpx;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.item .item-info .money{
  flex-shrink: 0;
  width: 35%;
}
.item .item-info .status{
  width: 25%;
  text-align: right;
}
.item .date-list{
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}
.item label{
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #999;
}
.item text{
  font-size: 28rpx;
  color: #666;
}
.ys-footer-btn{
  color: #ffa300;
}
.btn1{
  /* border-right: 1rpx solid #ededed */

}
.btn-hover{
  background-color: #ffa300;
  color: #fff;
}
.item .view-account{
  text-align: right;
  /* background: #ffa300; */
  
}
.item .view-account{
  display: block;
  position: absolute;
  left: -28rpx;
  top: 30rpx;
  width: 65rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #ffa300;
  color: #fff;
  font-size: 24rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding-right: 10rpx;
}
