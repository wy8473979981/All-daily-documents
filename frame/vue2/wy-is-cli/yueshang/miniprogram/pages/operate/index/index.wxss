/* pages/operate/index/index.wxss */
page{
  background: #f5f5f5;
}
#ys-operate{
  font-size: 30rpx;
  background: #f5f5f5;
}
.ys-block .title{
  padding: 25rpx 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
}
.ys-block{
  background: #fff;
  margin-top:30rpx;
}
.title text {
  position: relative;
  padding-left: 20rpx;
  font-weight:bold;
  color:#262626;
}
.title text::after{
  position: absolute;
  content: '';
  background: #ffa200;
  top: 8rpx;
  left: 0;
  height: 30rpx;
  width: 8rpx;
}
#canvas{
  width: 100%;
  height: 200px;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.ys-swiper-tab .swiper-tab-item{
  position: relative;
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  color: #666;
  font-size: 30rpx;
  box-sizing: content-box;
}
.ys-swiper-tab .enter{
  position: absolute;
  right: 70rpx;
  top: 2rpx;
  font-size: 20rpx;
  color: #02d7c0;
}
.swiper-tab-item .ys-badge-red{
  position: absolute;
  left: 50%;
  top: 8rpx;
  margin-left:30rpx;
  height: 30rpx;
  width: 50rpx;
  border-radius: 20rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.ys-swiper-tab .active{
  color: #02d7c0;
  border-bottom: 6rpx solid #02d7c0;
}
.ys-swiper-tab .swiper-tab-line{
  height: 40rpx;
  margin-top: 10rpx;
  width: 1rpx;
  border-left: 1rpx solid #eee;
}
.header{
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
  background: #f5f5f5;
}
.header text{
  display: block;
}
.header text:nth-child(1){
  color: #999;
}
.header text:nth-child(2){
  color: #02d7c0;
}
.ys-block-items{
  background: #fff;
}
.ys-block-items .item{
  position: relative;
  border-bottom: 4rpx solid #eee;
  padding: 30rpx 25rpx;
  overflow: hidden;
  color: #333;
}
.item .title{
  font-size: 24rpx;
}
.item .date{
  font-size: 32rpx;
  color: #666;
}
.item .list{
  display: flex;
}
.list .date{
  width:100rpx;
  line-height: 80rpx;
}
.list .sale,.amount,.single-price{
  flex: 1;
  text-align: right;
  line-height: 40rpx;
}
