
page{
  background: #fff;
  font-size: 30rpx;
}
.ys-swiper-tab{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  display: flex;
  height: 80rpx;
  justify-content: space-around;
  line-height: 74rpx;
  background: #fff;
}
.item-wrapper{
  position: relative;
  display: flex;
  justify-content: center;
  width: 50%;
}
.ys-swiper-tab .swiper-tab-item{
  position: relative;
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  color: #666;
  font-size: 30rpx;
  box-sizing: content-box;
}
.ys-swiper-tab .enter{
  position: absolute;
  right: 70rpx;
  top: 2rpx;
  font-size: 20rpx;
  color: #02d7c0;
}
.swiper-tab-item .ys-badge-red{
  position: absolute;
  left: 50%;
  top: 8rpx;
  margin-left:30rpx;
  height: 30rpx;
  width: 50rpx;
  border-radius: 20rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.ys-swiper-tab .active{
  color: #02d7c0;
  border-bottom: 6rpx solid #02d7c0;
}
.ys-swiper-tab .swiper-tab-line{
  height: 40rpx;
  margin-top: 10rpx;
  width: 1rpx;
  border-left: 1rpx solid #eee;
}
.header{
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  background: #f5f5f5;
}
.header text{
  display: block;
}
.header text:nth-child(1){
  color: #999;
}
.header text:nth-child(2){
  color: #02d7c0;
}
.ys-block-items{
  /* margin-top: 80rpx; */
}
.ys-block-items .item{
  position: relative;
  border-bottom: 4rpx solid #eee;
  padding: 30rpx 25rpx;
  overflow: hidden;
  color: #333;
}
.item .date{
  font-size: 32rpx;
  color: #666;
}
.item .bottom{
  margin-top: 10rpx;
  color: #999;
}
.bottom text{
  display: inline-block;
  width: 50%;
}
.noData{
  padding-top: 200rpx;
  text-align: center;
  line-height: 60rpx;
  color: #b2b2b2;
}
.noData image{
  display: block;
  height: 200rpx;
  width: 200rpx;
  margin: 0 auto;
}