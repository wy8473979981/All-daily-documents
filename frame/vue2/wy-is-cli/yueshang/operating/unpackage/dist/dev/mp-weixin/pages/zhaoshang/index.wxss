/* pages/zhaoshang/index.wxss */
.header {
	height: 100rpx;
	width: 100%;
	background: -webkit-linear-gradient(right, #1e5385 0%, #3a96bd 100%);
	background: linear-gradient(270deg, #1e5385 0%, #3a96bd 100%);
	color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 36rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.header-right-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.header-right-select {
	margin-left: 20px;
}
.tab-list-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	width: 100%;
	background: -webkit-linear-gradient(right, #1e5385 0%, #3a96bd 100%);
	background: linear-gradient(270deg, #1e5385 0%, #3a96bd 100%);
	padding: 10rpx 150rpx 0 150rpx;
	color: #fff;
}
.tab-list-item {
	border-bottom: 5rpx solid transparent;
	padding-bottom: 20rpx;
}
.border-current {
	border-color: #fff;
}
.updata-time {
	font-size: 22rpx;
	line-height: 74rpx;
	text-align: center;
	color: #c5c5c5;
}
.select-indicator {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
}
.line {
	margin: 0 15rpx;
}
.active {
	color: #3992ba;
	font-weight: 600;
}

