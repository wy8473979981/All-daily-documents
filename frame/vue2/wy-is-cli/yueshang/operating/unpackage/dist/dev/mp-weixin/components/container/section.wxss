/* components/container/section.wxss */
.app-section {
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}
.app-section .app-section__head {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.app-section .app-section__head .app-section__head__title {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  height: 32rpx;
  line-height: 32rpx;
  border-left: 6rpx solid #3992BA;
  padding-left: 14rpx;
}
.app-section .app-section__head .app-section__head__title .app-section__head__title__subtitle {
  color: #7D7E80;
  font-size: 24rpx;
}
.app-section .app-section__head .app-section__head__actions_left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
}
.app-section .app-section__head .app-section__head__actions {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.app-section .app-section__head .app-section__head__url {
  margin-left: 20rpx;
  width: 26rpx;
  height: 14rpx;
  -webkit-transform: rotate(-90deg);
          transform: rotate(-90deg);
}
.app-section .app-section__head .app-section__head__collapse {
  margin-left: 20rpx;
  width: 26rpx;
  height: 14rpx;
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
  -webkit-transition: -webkit-transform 250ms;
  transition: -webkit-transform 250ms;
  transition: transform 250ms;
  transition: transform 250ms, -webkit-transform 250ms;
}
.app-section .app-section__head .app-section__head__collapse.collapsed {
  -webkit-transform: rotate(0deg);
          transform: rotate(0deg);
}
.app-section .app-section__body {
  position: relative;
  height: auto;
  margin-top: 30rpx;
  overflow: hidden;
  -webkit-transition: all 500ms;
  transition: all 500ms;
}
.app-section.collapsed .app-section__body {
  margin-top: 0rpx;
  height: 0rpx;
}

