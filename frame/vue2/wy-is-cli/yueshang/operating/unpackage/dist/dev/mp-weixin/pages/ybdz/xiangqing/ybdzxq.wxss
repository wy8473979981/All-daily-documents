.detail-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 20rpx 30rpx;
	background-color: #fff;
	margin-bottom: 20rpx;
}
.detail-item-label {
	font-size: 24rpx;
	color: #7d7e80;
}
.item-num-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.item-num {
	color: #333;
	font-size: 36rpx;
}
.red {
	color: #ff120d;
}
.item-unit {
	font-size: 20rpx;
	margin-left: 5rpx;
	color: #7d7e80;
}

