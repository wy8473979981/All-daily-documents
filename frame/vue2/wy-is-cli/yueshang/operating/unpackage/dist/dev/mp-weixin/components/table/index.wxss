.fixed {
  position: -webkit-sticky !important;
  position: sticky !important;
  z-index: 1;
}
.text-left {
  text-align: left !important;
}
.text-right {
  text-align: right !important;
}
.sortable.text-right.app-table-row__item {
  padding-right: 28rpx !important;
}
.sortable.text-right {
  padding-right: 10rpx;
}
.app-table {
  position: relative;
  width: 100%;
  overflow: auto;
  font-size: 24rpx;
  line-height: 1.5;
  border-bottom: 1px solid #f5f5f5;
}
.app-table-header__items {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  position: relative;
  min-width: 100%;
}
.app-table-header__item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  position: relative;
  padding: 10rpx 0;
  background-color: #f5f5f5;
  text-align: center;
}
.app-table-header__item.in-group {
  text-align: left;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.app-table-header__item__group {
  position: relative;
  width: 100%;
  height: 40rpx;
  padding: 0 20rpx;
  margin-bottom: 10rpx;
  line-height: 30rpx;
  text-align: left;
  white-space: nowrap;
  border-bottom: 1px solid #e3e3e3;
}
.app-table-header__item__group-name {
  position: absolute;
  z-index: 0;
}
.app-table-header__item__column-name {
  width: 100%;
  padding: 0 20rpx;
}
.app-table-header__item image {
  position: absolute;
  top: 50%;
  right: 5rpx;
  margin-left: 6rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.app-table-rows__empty {
  padding: 10px;
  text-align: center;
}
.app-table-row {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  position: relative;
  min-width: 100%;
  text-align: center;
}
.app-table-row:not(:last-child) .app-table-row__item {
  border-bottom: 1px solid #EAEAEA;
}
.app-table-row__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 20rpx 20rpx;
  line-height: 1.5;
  background-color: #ffffff;
  text-align: center;
}
.app-table-row--total .app-table-row__item {
  font-weight: bold;
}
.app-table-row__item.selected text {
  position: relative;
  z-index: 0;
  color: #FD100E;
}
.app-table-row__item.selected text::before {
  content: '';
  position: absolute;
  z-index: -1;
  top: -10rpx;
  bottom: -10rpx;
  left: -10rpx;
  right: -10rpx;
  background-color: #fde3e3;
}

