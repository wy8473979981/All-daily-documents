.app-header {
  padding: 20rpx;
  background: linear-gradient(270deg, #0071D9 0%, #1C92FF 100%);
  color: #ffffff;
  font-size: 32rpx;
}

.app-header .app-header__top {
  display: flex;
}

.app-header .app-header__top__left {
  display: flex;
}

.app-header .app-header__top__right {
  display: flex;
  justify-content: flex-end;
  flex: 1;
}

.app-header .app-header__top__right {
  margin-left: 20rpx;
}

.app-header .app-header__bottom__tabs {
  display: flex;
  justify-content: space-between;
  padding: 0 100rpx;
  margin-top: 20rpx;
}

.app-header .app-header__bottom__tabs .app-header__bottom__tabs__item {
  position: relative;
  padding: 0rpx 20rpx;
  opacity: .7;
}

.app-header .app-header__bottom__tabs .app-header__bottom__tabs__item.active {
  opacity: 1;
}


.app-header .app-header__bottom__tabs .app-header__bottom__tabs__item.active::before {
  content: '';
  position: absolute;
  left: 0;
  bottom: -20rpx;
  width: 100%;
  height: 3px;
  background-color: #ffffff;
}