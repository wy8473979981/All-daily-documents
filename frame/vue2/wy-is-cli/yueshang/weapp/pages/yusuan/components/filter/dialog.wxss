app-filter-dialog+app-filter-dialog {
  margin-left: 15rpx;
}

.app-filter {
  display: inline-block;
  font-size: 24rpx;
}

.app-filter.app-filter--primary {
  color: #1890FF;
}

.app-filter-dialog {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}

.app-filter-dialog.overlay {
  background-color: rgba(0, 0, 0, .5);
}

.app-filter-dialog .app-filter-dialog__main {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  width: 100%;
  max-height: 80%;
  padding: 10rpx 30rpx 30rpx;
  background-color: #ffffff;
  z-index: 1;
}

.app-filter-dialog .app-filter-dialog__main .app-filter-dialog__main__close {
  position: absolute;
  top: -60px;
  left: 50%;
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 50%;
  transform: translateX(-50%);
}

.app-filter-dialog .app-filter-dialog__main__tip {
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #757575;
}

.app-filter-dialog .app-filter-dialog__main__body {
  flex: 1;
  margin-bottom: 30rpx;
  overflow: auto;
}

.app-filter-dialog .app-filter-dialog__main__body .checkbox-item {
  margin-bottom: 30rpx;
}

.app-filter-dialog .app-filter-dialog__main__body .group__title {
  padding: 10rpx;
  font-size: 28rpx;
  color: #757575;
}

.app-filter-dialog .app-filter-dialog__main__body .items__items {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}

.app-filter-dialog .app-filter-dialog__main__body .items__items .item-item {
  width: 100%;
  font-size: 28rpx;
  white-space: nowrap;
  padding: 20rpx 20rpx;
  border-bottom: 1px solid #EAEAEA;
  color: #333333;
}

.app-filter-dialog .app-filter-dialog__main__body .items__items .item-item.selected {
  /* background-color: #218FFF; */
  color: #218FFF;
  font-size: 32rpx;
}

.app-filter-dialog .app-filter-dialog__main__body .items__items .item-item.disabled {
  /* opacity: .5; */
}

.app-filter-dialog .app-filter-dialog__main__actions {
  display: flex;
  justify-content: center;
  align-items: center;
}

.app-filter-dialog .app-filter-dialog__main__actions button {
  flex: 1;
}

.app-filter-dialog .app-filter-dialog__main__actions button+button {
  margin-left: 20rpx;
}