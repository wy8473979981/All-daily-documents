
page{
  background: #f5f5f5;
  font-size: 30rpx;
}
#message .ys-swiper-tab{
  position: fixed;
  top: 0;
  z-index: 2;
  width: 100%;
  display: flex;
  height: 80rpx;
  justify-content: space-around;
  line-height: 74rpx;
  background: #fff;
}
.item-wrapper{
  width: 50%;
}
.ys-swiper-tab .swiper-tab-item{
  position: relative;
  width: 160rpx;
  text-align: center;
  color: #666;
  font-size: 30rpx;
  margin: 0 auto;
  box-sizing: content-box;
}
.swiper-tab-item .ys-badge-red{
  position: absolute;
  left: 50%;
  top: 8rpx;
  margin-left:30rpx;
  height: 30rpx;
  width: 50rpx;
  border-radius: 20rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.ys-swiper-tab .active{
  color: #02d6c0;
  border-bottom: 6rpx solid #02d6c0;
}
.ys-swiper-tab .swiper-tab-line{
  height: 40rpx;
  margin-top: 10rpx;
  width: 1rpx;
  border-left: 1rpx solid #eee;
}
.ys-block-items .items{
  margin-top: 110rpx;
  background: #fff;
}
.ys-block-items .item{
  position: relative;
  height: 100rpx;
  border-bottom: 4rpx solid #eee;
  padding: 20rpx 25rpx;
  overflow: hidden;
  color: #333;
}
.item .header{
  height: 40rpx;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}
.item .bottom{
  position: absolute;
  bottom: 20rpx;
  left: 25rpx;
  right: 25rpx;
  height: 40rpx;
  color: #bababa;
}
.item .left-side{
  float: left;
}
.item .date{
  float: left;
}
.item .num{
  float: left;
}
.item image{
  float: left;
  height: 30rpx;
  width: 30rpx;
  margin-left: 20rpx;
  margin-top: 8rpx;
  margin-right: 10rpx;
}
.item .status{
  float: right;
  padding: 6rpx 10rpx;
  font-size: 22rpx;
  background: #f2f2f2;
  color: #bababa;
  border-radius: 4rpx;
}
.status-active{
  background: #fff0d1;
  color: #fab617;
}