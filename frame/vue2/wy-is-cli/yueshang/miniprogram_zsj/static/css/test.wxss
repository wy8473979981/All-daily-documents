.ys-block{
  position: relative;
  height:100%;
}
.ys-block-gap{
  border-top:solid 30rpx #f5f5f5;
}
.ys-block-fixed-header{
  padding-top:88rpx;
}
.ys-block-fixed-footer{
  padding-bottom:99rpx;
}

.ys-section{
  display: block;
  position:relative
}
.ys-section-gap{
  border-top:solid 30rpx #f5f5f5;
}
.section-separate{
  padding:0 30rpx;
  height:72rpx;
  line-height: 72rpx;
  background-color:#f5f5f5;
}
.section-separate-title{
  font-size:24rpx;
  color:#999;
}

.ys-section .ys-section-title{
  padding:30rpx;
  font-size:30rpx;
  color:#333;
}
.ys-section .ys-section-content{
  padding:30rpx;
}
.ys-section .ys-section-title+.ys-section-content{
  padding-top:0;
}

.ys-section .ys-section-content.ys-section-no-padding{
  padding:0;
}

.text-red{
  color:#d8004b!important;
}

/*ys-thumbnail-wrapper*/
.ys-thumbnail-wrapper{
   display:grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-gap: 20rpx;
    justify-content:space-between;
    align-content:start;
    align-items:start;
    justify-items:start;
}

.ys-thumbnail-wrapper .thumbnail{
    height:128rpx;
    width:128rpx;

    border:solid 2rpx #eee;
}
.ys-thumbnail-wrapper .thumbnail image{
  width:100%;
  height:100%;
}
.ys-thumbnail-wrapper .thumbnail.thumbnail-add{
  line-height: 124rpx;
  text-align: center;
  font-size:56rpx;
}
.ys-fixed-header{
    position: fixed;
    width:100%;
    height:80px;
    background-color:#fff;
    top:0;
    left:0;
}


.ys-fixed-footer{
    position: fixed;
    z-index: 2;
    width:100%;
    height:99rpx;
    border-top:solid 1rpx #eee;
    background-color:#fff;
    bottom:0;
    left:0;
}

.ys-nav-item {
  padding: 30rpx 25rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.ys-nav-item:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #eee;
  color: #D8D8D8;
}
.ys-nav-item:first-child:before {
  display: none;
}
.ys-nav-item .ys-icon{
  display: block;
  margin-right:26rpx;
  width:88rpx;
  height:88rpx;
  border-radius:100%;
  background-color:#D8D8D8;
}

.nav-text {
  flex: 1;
  font-size:32rpx;
  color:#333;
}

.nav-arrow {
  padding-right: 26rpx;
  position: relative;
}
.nav-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

/*.ys-figure*/
.ys-figure-wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  width:100%;
  height:360rpx;
}
.ys-figure {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.ys-figure-horizontal{
    display: flex;
   flex-direction: row;
}
.ys-figure-horizontal .ys-figure-info{
    flex:1;
}

.ys-figure-avatar {
  width: 124rpx;
  height: 124rpx;
  margin: 26rpx;
  border-radius: 50%;
  overflow:hidden;

}
.ys-figure-avatar image{
    width:100%;
    height:100%;
    object-fit: cover;
}

.ys-figure-info {
  color: #aaa;
  font-size:34rpx;
}
.ys-figure-info .ys-info-title,
.ys-figure-info .ys-info-detail{
  display: flex;
  justify-content: start;
}
.ys-figure-info .ys-info-title{
  font-size:34rpx;
}
.ys-figure-info .ys-info-detail{
  font-size:24rpx;
}
/*ys-icon*/
.ys-icon{
  display: inline-block;
  width:32px;
  height:32rpx;
  background-repeat: no-repeat;
  background-size:contain;
  background-position: center center;
}

.ys-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius:0;
  text-align:center;
  font-size:32rpx;
}
.ys-btn:before,
.ys-btn:after{display: none;}

.ys-fixed-footer .ys-btn{
  height:100%;
  border:0;
  border-radius:0;
}
.ys-fixed-footer .ys-btn .ys-icon{
  margin-right:20rpx;
}

.ys-btn-powderblue{ 
  background-color:#02d6c0;
  color:#fff;
  
}
.ys-btn-powderblue-reverse{
  color:#02d6c0;
  background-color:#fff;
  border:solid 4rpx #02d6c0;
}
/*ys-badge*/
.ys-badge{
  display: inline-block;
  height:28rpx;
  padding:4rpx 8rpx;
  background-color:#ebb382;
  color:#fff;
  font-size:20rpx;

}
.ys-badge-sm{
  height:28rpx;
  border-radius:4rpx;

}
.ys-badge-warn{
  background-color:#fff0d1;
  color:#fbb215;

}
.ys-badge-green{
  background-color:#dbf4d6;
  color:#51c733;
}

.ys-badge-disabled{
  background-color:#f1f1f1;
  color:#bbb; 
}
/*ys-cell*/
.ys-cell,.list-item{
  display: flex;
  position:relative;
  padding:0 30rpx;
  height:106rpx;
  align-items: center;
  justify-content:flex-start;
}
.ys-cell:before,
.list-item:before{
  display: block;
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #eee;
  color: #D8D8D8;

}
.ys-cell:first-child:before,
.list-item:first-child:before{
  display:none;
}

.ys-cell .ys-cell-label{
  position:relative;
  width:200rpx;
  padding-right:30rpx;
  font-size:30rpx;
  color:#333;
}
.ys-cell.request .ys-cell-label:after{
  display: inline-block;
  position: relative;
  margin-left:10rpx;
  content:"*";
  color:red;
  transform: translateY(-10%);
}

.ys-cell .ys-cell-content{
  flex:1;
  display: inline-flex;
  justify-content: flex-end;
  font-size:28rpx;
  color:#999;
}

.ys-cell .ys-cell-content input{
  text-align: right;
}

/*ys-info-panel*/
.ys-info-panel{
  padding:16rpx 0;
}

.ys-info-panel .ys-cell{
  height:60rpx;
}
.ys-info-panel .ys-cell:before{
  display: none;
}
.ys-info-panel .ys-cell .ys-cell-label{
  width:160rpx;
}

.ys-info-panel .ys-cell .ys-cell-content{
 justify-content:flex-start;
}

/*list-item*/
.ys-list-wrapper{
  border-top:solid 30rpx #f5f5f5;
  background-color:#fff;
}
.list-item{
  padding:10rpx 30rpx;
}
.list-item .col-left{
  flex-grow:1;
  display: flex;
  flex-direction: column;
}

.list-item .col-right{
  flex-grow:1;
  display: flex;
  justify-content: flex-end;
}

.col-flex-column{
  display: flex;
  flex-direction: column!important;
  align-items: flex-start;
}
.col-flex-row{
  display: flex;  
  flex-direction: row!important;
}


.list-item .title{
  font-size:30rpx;
  color:#333
}
.list-item .sub-title,
.list-item .comments{
  margin-top:10rpx;
  font-size:24rpx;
  color:#999;
}
/* ys-modal */
.ys-modal {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1050;
    display: none;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
    outline: 0;
    align-items: center;
    justify-content: center;
}

.ys-modal:after{
  display: block;
  position: absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;
  background-color:rgba(33,33,33,.28);
  content:" ";
  z-index:9;
}

.ys-modal.show{
  display: flex;
}
.ys-modal-dialog {
    display: flex;
   flex-direction: column;
    width: 90%;
   
    z-index:999;
}

.ys-modal-content {
    position: relative;
     min-height:280rpx;
    background-color: #fff;
    
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border:0;
    border-radius: 6px;
    outline: 0;
    -webkit-box-shadow: 0 3px 9px rgba(0,0,0,.5);
    box-shadow: 0 3px 9px rgba(0,0,0,.5);
}

/*ys-swiper-tab*/
.ys-fixed-header{
   position:fixed;
   top:0;
   left:0;
   width:100%;
   height:88rpx;
   z-index:2999;
}

.ys-swiper-tab{
  display:flex;
  flex-direction: row;

  justify-content: space-around;  

}
.swiper-tab-item{
  flex-grow:0;
  flex-shrink: 1;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;

  font-size:28rpx;
}
.ys-tab-col-2 .swiper-tab-item{
  flex-basis: 50%;
}
.swiper-tab-item + .swiper-tab-item:after{
  position: absolute;
  display: block;
  left:0;
  top:50%;
  height:44rpx;
  width:2rpx;
  background-color:#ccc;
  transform:translateY(-50%);
  content:" ";
}

.swiper-tab-item .tab-nav{
  display: block;
  min-width:160rpx;
  line-height:84rpx;
  text-align: center;
  padding:0 20rpx;
  height:84rpx;
  border-bottom:solid 4rpx transparent;
  color:#666;

}
.swiper-tab-item.active .tab-nav{
  color:#02d6c0;
  border-color:#02d6c0;
}